<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CapstoneRino" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_green</item>
        <item name="colorPrimaryVariant">@color/auth_blue</item>
        <item name="colorOnPrimary">@color/app_window</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/warm_red</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/app_window</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/auth_blue</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_left</item>
        <item name="android:windowExitTransition">@android:transition/slide_right</item>
        <item name="android:fontFamily">@font/gabriela</item>
    </style>

    <style name="Theme.CapstoneRino.Home" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/very_dark_green</item>
        <item name="colorPrimaryVariant">@color/blue_green</item>
        <item name="colorOnPrimary">@color/app_window</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_green</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/app_window</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/app_window</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_left</item>
        <item name="android:windowExitTransition">@android:transition/slide_right</item>
        <item name="android:fontFamily">@font/gabriela</item>
    </style>

    <style name="SplashTheme" parent="Theme.CapstoneRino">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryVariant">@color/splash_dark_blue</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:background">@drawable/background_spinner</item>
        <item name="android:popupBackground">@drawable/dropdown_background</item>
        <item name="android:dropDownItemStyle">@layout/spinner_item</item>
    </style>

    <style name="TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextContent.Bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextContent.EditTextTitle" parent="TextContent.Bold">
        <item name="android:textSize">@dimen/dimen_16sp</item>
        <item name="android:textColor">@color/very_dark_green</item>
        <item name="android:fontFamily">@font/gabriela</item>
    </style>

    <style name="edit_text">
        <item name="android:textColorHint">@color/blue_green</item>
        <item name="android:textColor">@color/very_dark_green</item>
        <item name="android:fontFamily">@font/gabriela</item>
    </style>

    <style name="button_style">
        <item name="android:fontFamily">@font/gabriela</item>
    </style>

    <style name="detail_style_title">
        <item name="android:fontFamily">@font/tilt_warp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blue_green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="detail_style_warm">
        <item name="android:fontFamily">@font/tilt_warp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/warm_red</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="detail_style">
        <item name="android:fontFamily">@font/gabriela</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/very_dark_green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent.Title" parent="TextContent.Bold">
        <item name="android:fontFamily">@font/gabriela</item>
        <item name="android:textColor">@color/very_dark_green</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>